#!/usr/bin/env bash
#What?
#!/usr/bin/env bash
# Simple signal-handling script with PID file

PIDFILE="/var/run/myscript.pid"

# Write our own PID to the pidfile
echo "$$" > "$PIDFILE"

# Handle SIGTERM: complain, clean up, exit
handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PIDFILE"
    exit 0
}

# Handle SIGINT: just complain, keep running
handle_sigint() {
    echo "Y U no love me?!"
}

# Handle SIGQUIT: clean up, exit
handle_sigquit() {
    rm -f "$PIDFILE"
    exit 0
}

trap handle_sigterm TERM
trap handle_sigint INT
trap handle_sigquit QUIT

# Infinite loop
while :; do
    echo "To infinity and beyond"
    sleep 2
done

