#!/usr/bin/env bash
# 11-manage_my_process - simple init-style script for manage_my_process

PID_FILE="/var/run/my_process.pid"
SCRIPT_DIR="$(dirname "$0")"
MANAGE_CMD="$SCRIPT_DIR/manage_my_process"

start_process() {
    # start in background
    "$MANAGE_CMD" &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop_process() {
    if [ -f "$PID_FILE" ]; then
        PID="$(cat "$PID_FILE")"
        if kill "$PID" 2>/dev/null; then
            rm -f "$PID_FILE"
            echo "manage_my_process stopped"
        else
            # if kill fails but pid file exists, still remove it per spec
            rm -f "$PID_FILE"
            echo "manage_my_process stopped"
        fi
    else
        # spec doesn't say what to do if no pid file, but we keep message consistent
        echo "manage_my_process stopped"
    fi
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        stop_process
        start_process
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
